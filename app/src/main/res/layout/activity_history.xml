<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity"
    android:background="@drawable/screen"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tb_History"
        app:title="History"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_history"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_history"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias=".3"
        />
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_no_history"
        app:layout_constraintTop_toBottomOf="@id/bg_history"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/bg_history"
        app:layout_constraintRight_toRightOf="@id/bg_history"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_no_history_desc"
        app:layout_constraintTop_toBottomOf="@id/textHistory"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        app:layout_constraintLeft_toLeftOf="@id/textHistory"
        app:layout_constraintRight_toRightOf="@id/textHistory"
        />

</androidx.constraintlayout.widget.ConstraintLayout>